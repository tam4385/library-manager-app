extends layout.pug

block content
    .new-book-container
        h1= book.title
        p   Update! Provide values to all fields to update the book!
        if (errors)
            ul
                each error in errors
                    li= error.message
        form(class="new-book-form" method="post" action=`/books/${book.id}`)
            p
                label(for='title') Title
                input#title(name='title' type='text' value=`${book.title}`)
            p
                label(for='author') Author
                input#author(name='author' type='text' value=`${book.author}`)
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text' value=`${book.genre}`)
            p
                label(for='year') Year
                input#year(name='year' type='text' value=`${book.year}`)
            p
                input(type='submit' value='Update Book' class='button')
            
        form(method='post' action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
            p
                input(type='submit' value='Delete Book' id='delete-button')
            p
                a.button(href='/' id="cancel") Cancel
